@model ProLi.Models.Prolievent

@{
    ViewData["Title"] = "Edit";
}

<h1>Kiválasztott rendezvény módosítása</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EventId" />
            <div class="form-group">
                <label asp-for="EventName" class="control-label">Rendezvény neve:</label>
                <input asp-for="EventName" class="form-control" />
                <span asp-validation-for="EventName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventDate" class="control-label">Dátum:</label>
                <input asp-for="EventDate" class="form-control" />
                <span asp-validation-for="EventDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventPlace" class="control-label">Helyszín:</label>
                <input asp-for="EventPlace" class="form-control" />
                <span asp-validation-for="EventPlace" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventHead" class="control-label">Maximális létszám:</label>
                <input asp-for="EventHead" class="form-control" />
                <span asp-validation-for="EventHead" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventStatus" class="control-label">Állapot</label>
                <input asp-for="EventStatus" class="form-control" />
                <span asp-validation-for="EventStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Mentés" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Visszalépés a rendezvények listájához</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
