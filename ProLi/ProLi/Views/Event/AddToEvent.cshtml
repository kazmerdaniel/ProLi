@model IEnumerable<People>


<h1>Személy hozzáadása eseményhez:</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddToEvent">
            <div  class="text-danger"></div>
            <div class="form-group">
                <label for="person" class="control-label"></label>
                <select name="person" id="person" placeholder="select members" class="form-control w-50 dropdown">
                    @foreach (var p in Model)
                    {
                    <option value="@p.Id">@p.GuestName</option>
                    }
                </select>
            </div>
  
            <div class="form-group">
                <input type="submit" value="Rögzítés" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Vissza</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
