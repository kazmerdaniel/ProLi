@model ProLi.Models.Proliperson

@{
    ViewData["Title"] = "Delete";
}

<h1>Személy törlése</h1>

<div>
    <h4>Proliperson</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayName("Név")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PersonName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Ország")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PersonCountry)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("E-mail")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PersonEmail)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Telefon")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PersonPhone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Megjegyzés")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PersonComment)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Bizalmas megjegyzés")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PersonSpecComment)
        </dd>
    </dl>

    <h3>A törlés gomb megnyomásával a személy és az összes adata törlődik. Biztos benne?</h3>
    <form asp-action="Delete">
        <input type="hidden" asp-for="PersonId" />
        <input type="submit" value="Törlés" class="btn btn-danger" /> |
        <a asp-action="Index">Vissza a személyek listájához</a>
    </form>
</div>
