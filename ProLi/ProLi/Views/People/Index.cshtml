@model IEnumerable<ProLi.Models.People>

@{
    ViewData["Title"] = "Index";
}

<h1>Rögzített személyek</h1>
<p>
    <a asp-action="Create" class="btn btn-secondary">Új személy rögzítése</a>
@*    <a asp-controller="Offices" asp-action="Index" class="btn btn-secondary">Teljes lista megtekintése</a>
*@</p>

@*Keresés*@

<form asp-controller="People" asp-action="Index" method="get">
    <p>
        Keresett név: <input type="text" name="SearchString" />
        <input type="submit" value="Keresés" class="btn-secondary btn-xs" />
        <input type="submit" value="Szűrés törlése" class="btn-secondary btn-xs" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GuestName)

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)

            </th>


            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GuestName)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>     
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
            <td>
                <a asp-action="Edit" class="btn btn-secondary" asp-route-id="@item.Id">Szerkesztés</a> |
                <a asp-action="Details" class="btn btn-secondary" asp-route-id="@item.Id">Részletek</a> |
                <a asp-action="Delete" class="btn btn-dark" asp-route-id="@item.Id">Törlés</a>
            </td>
        </tr>
}
    </tbody>
</table>
